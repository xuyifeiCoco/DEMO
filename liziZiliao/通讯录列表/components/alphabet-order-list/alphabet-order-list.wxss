/* components/alphabet-order-list/alphabet-order-list.wxss */

.alphabetical-order {
  width: 100%;
  height: 100vh;
  position: relative;
  background-color: #FAFAFA;
}

.alphabet {
  position: absolute;
  z-index: 1000;
  text-align: center;
  right: 0;
  top: 0;
  bottom: 0;
  color: #333;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}

.letter {
  flex: 1;
  padding: 0 15rpx;
}

.letter-toast {
  position: absolute;
  z-index: 1000;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: white;
  background-color: rgba(0, 0, 0, 0.4);
  padding: 30rpx;
  border-radius: 15rpx;
  text-align: center;
  font-size: 96rpx;
  line-height: 96rpx;
  width: 96rpx;
}

.data-list {
  width: 100%;
  height: 100%;
  position: relative;
}

.letter-tag {
  background-color: whitesmoke;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 15rpx 30rpx;
  color: #888;
}
.tag-item {
  padding: 15rpx 30rpx;
  background-color: white;
  color: #333;
  display: flex;
  flex-direction: row;
}

.tag-item:active {
  background-color: #d8d8d8;
}
.divide-line {
  margin: 0 30rpx;
  height: 1px;
  width: auto;
  background-color: whitesmoke;
}
.item-image {
  width: 72rpx;
  height: 72rpx;
  background-color: whitesmoke;
  margin-right: 30rpx;
}
.item-text {
  font-size: 30rpx;
  line-height: 72rpx;
  flex: 1;
  min-height: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}